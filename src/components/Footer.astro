---
const {
    class: classProp
} = Astro.props

//If you want to change the responsive height of footer:
//tweak the `[--footer-height:${x}]` classes inside of footer component
---

<footer class:list={[
    classProp,
    "[--footer-height:3] h-[calc(var(--block-size)*var(--footer-height))] xs:[--footer-height:3] sm:[--footer-height:4] md:[--footer-height:3] w-full bg-block-stone"
]}>
    <div class="flex flex-col sm:flex-row items-center justify-between h-full p-5 bg-dark-75 text-white">
        <header class="flex flex-col gap-3 w-full sm:w-[60%]">
        </header>
        <nav class="self-end flex flex-col items-end gap-1 text-link">
            <a href="https://github.com/BryceRussell/astro-minecraft-theme" class="link">minecraft-theme</a>
            <a href="https://astro.build" class="link">Powered by Astro</a>
        </nav>
    </div>
</footer>
